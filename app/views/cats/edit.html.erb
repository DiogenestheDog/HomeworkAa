  <% action_url = cat_url(@cat) %>
  <% button_text = 'Update Cat' %>

<form action="<%= action_url %>" method="post">

<input type="hidden" name="_method" value="patch">

  <label for="name">Name:
    <input type="text" id="name" name="cat[name]" 
          value="<%= @cat.name %>">
  </label>
  <br>
  <label for="birth_date">Birth Date:
    <input type="date" id="birth_date" name="cat[birth_date]" 
          value="<%= @cat.birth_date %>">
  </label> 
  <br>
  <select name="cat[color]">
    <option value="brown">Brown</option>
    <option value="white">White</option>
    <option value="gray">Gray</option>
    <option value="black">Black</option>
    <option value="orange">Orange</option>
    <option value="spotted">Spotted</option>
    <option value="striped">Striped</option>
</select>
  <br>
  <label for="sex">Sex:
    <input type="radio" name="cat[sex]" value="M"> Male<br>
    <input type="radio" name="cat[sex]" value="F"> Female<br>
    <input type="radio" name="cat[sex]" value="X"> Other
 
  </label>
  <label for="description">Description:
    <input type="text" id="description" name="cat[description]" 
          value="<%= @cat.description %>">
  </label>
  <br>
  <input type="submit" value="<%= button_text %>">
</form>